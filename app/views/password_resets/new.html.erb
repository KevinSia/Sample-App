<% provide(:title, "Forget password") %>
<h1>Forget password</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:password_reset, url: password_resets_path) do |f| %>
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control', placeholder:"Enter your registered email here" %>

			<%= f.submit "Reset!", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
